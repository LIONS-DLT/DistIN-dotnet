<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DistIN.Authenticator.SignPage"
             Title="SignPage">
    <ScrollView>
        <VerticalStackLayout
            x:Name="layout"
            Spacing="25"
            Padding="30,20"
            VerticalOptions="Center">

            <Button
                Text="Sign / Accept"
                Clicked="OnAcceptClick"
                Padding="20"
                HorizontalOptions="Fill" />
            <Button
                Text="Cancel / Decline"
                Clicked="OnDeclineClick"
                Padding="20"
                HorizontalOptions="Fill" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>